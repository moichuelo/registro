<%- include('partials/head') %> <%- include('partials/header') %>

        <h2>Administrador</h2>
        <% if (user.imagen) { %>
            <img src="/resources/uploads/<%= user.imagen %>" alt="Foto de perfil" width="100"
                style="border-radius: 50%;">
            <% } %>
                <% if (login) {%>
                    <div class="container">
                        <% if (rol=="admin" ) {%>
                            <a href="/create" class="btn btn-outline-primary mt-4"><i
                                    class="bx bxs-plus-circle bx-md"></i></a>
                            <% } %>
                                <table class="table table-bordered table-striped text-center mt-4">
                                    <thead>
                                        <tr class="bg-primary text-white">
                                            <th scope="col">Referencia</th>
                                            <th scope="col">Nombre</th>
                                            <th scope="col">Precio</th>
                                            <th scope="col">Stock</th>
                                            <% if (rol=="admin" ) {%>
                                                <th scope="col">Acciones</th>
                                                <% } %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% productos.forEach((producto)=>{ %>
                                            <tr>
                                                <td>
                                                    <%=producto.ref%>
                                                </td>
                                                <td>
                                                    <%=producto.nombre%>
                                                </td>
                                                <td>
                                                    <%=producto.precio%>
                                                </td>
                                                <td>
                                                    <%=producto.stock%>
                                                </td>
                                                <% if (rol=="admin" ) {%>
                                                    <td>
                                                        <a href="/edit/<%=producto.ref%>"
                                                            class="btn btn-outline-warning"><i
                                                                class="bx bxs-edit"></i></a>
                                                        <a href="/delete/<%=producto.ref%>"
                                                            class="btn btn-outline-danger"><i
                                                                class="bx bxs-trash"></i></a>
                                                    </td>
                                                    <% } %>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <a href="/pdf/descargar" class="btn btn-outline-success mt-4">Descarga la tabla en
                                    formato PDF</a>

                                <a href="/pdfkit/descargar" class="btn btn-outline-success mt-4">Generar PDF desde
                                    cero</a>
                    </div>
                    <% }else { %>
                        <p>
                            <%= msg %>
                        </p>
                        <a href="/login" class="a-login">Iniciar sesi√≥n </a>

                        <% } %>



                            <%- include('partials/footer') %>